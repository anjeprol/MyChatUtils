<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_messages"
    android:orientation="vertical"
    tools:context=".ConversationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="profile"
                android:src="@drawable/ic_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Name"
                    android:textColor="#FFFFFF"
                    android:textSize="19dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="@dimen/msg"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/sly_texts"
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:id="@+id/msg_send01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/margin_sides"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_sides"
                android:visibility="gone"
                app:cardBackgroundColor="@color/bg_text_sent"
                app:cardCornerRadius="@dimen/cornerRadius">


                <LinearLayout
                    android:id="@+id/ll_send_views"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_sides"
                    android:layout_marginRight="@dimen/margin_sides"
                    android:layout_marginBottom="@dimen/margin_sides"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_send_text01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_sides"
                        android:layout_marginTop="@dimen/top_text_views"
                        android:text="Mensaje para enviar"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/msg_received01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_sides"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_sides"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/bg_msg_received"
                app:cardCornerRadius="@dimen/cornerRadius">

                <LinearLayout
                    android:id="@+id/ll_received_views"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_sides"
                    android:layout_marginRight="@dimen/margin_sides"
                    android:layout_marginBottom="@dimen/margin_sides"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_received_text01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_sides"
                        android:layout_marginTop="@dimen/top_text_views"
                        android:text="Mensaje para recibido"
                        android:textColor="@color/tx_color"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/msg_send02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/margin_sides"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_sides"
                android:visibility="gone"
                app:cardBackgroundColor="@color/bg_text_sent"
                app:cardCornerRadius="@dimen/cornerRadius">


                <LinearLayout
                    android:id="@+id/ll_send_views00"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_sides"
                    android:layout_marginRight="@dimen/margin_sides"
                    android:layout_marginBottom="@dimen/margin_sides"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:src="@drawable/location_sent" />

                    <TextView
                        android:id="@+id/tv_send_text02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_sides"
                        android:layout_marginTop="@dimen/top_text_views"
                        android:hint="Mensaje para enviar"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />




                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ly_content_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@id/message"
            android:layout_width="220dp"
            android:layout_height="@dimen/height_texts"
            android:layout_marginLeft="@dimen/margin_left_time"
            android:backgroundTint="#D1B9B5"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:background="#FFFFFF"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/locationIV"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_time"
            android:src="@drawable/img" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_texts"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin_left_time"
            android:background="@color/colorPrimary"
            android:text="@string/send"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>